<div>
<p id="notice"><%= notice %></p>
<p>
  <%= image_tag @roast.image %>
</p>

<p>
  <strong>Body:</strong>
  <%= @roast.body %>
</p>

<div id="comments">
  <h2><%= @roast.comments.count %>Roasts</h2>
  <%= render @roast.comments %>

  <h3>Add a Roast</h3>
  <%= render "comments/form" %>
</div>

<%= link_to 'Edit', edit_roast_path(@roast) %> |
<%= link_to 'Back', roasts_path %>
