<%= render "layouts/header" %>









<table >
  <thead>
    <tr>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="tableClass">
    <% @roasts.each do |roast| %>

      <tr>
        <td><%= roast.body %></td>
        <td ><%= image_tag roast.image, width: 150, height: 150 %></td>

        <td><%= link_to 'Show', roast %></td>

        <% if roast.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_roast_path(roast) %></td>
        <% end %>


      </tr>

    <% end %>
  </tbody>
</table>
