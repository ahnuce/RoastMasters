<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_body"><%= comment.body %></p>
    <p class="comment_time"><%= time_ago_in_words(comment.created_at)%>Ago</p>
  </div>
  <p>
    <%= link_to 'Delete', [comment.roast, comment], method: :delete, class:"button",
    data:{ confirm: "Are you sure?"} %>
  </p>
  <p>
    <%= link_to like_comment_path(comment), class:"like", method: :put do %>
    <button type="button" class="btn btn-info" aria-label="left Align"><spanclass="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
      <span class="badge"><%= comment.get_upvotes.size %></span>
    </button>
    <% end %>
  </p>
</div>
