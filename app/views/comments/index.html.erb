<center>
<%= render "layouts/header" %>
<% @roasts.each do |roast| %>


    <%= roast.body %>
    <br>
    <%= image_tag roast.img_url, width: 150, height: 150 %>
    <br>

    <%= link_to 'Show', roast %>

    <% if roast.user_id == current_user.id %>
    <%= render @comments %>
    <% end %>
    <% end %>
</center>
