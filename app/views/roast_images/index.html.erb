<h1>Roast Images</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roast_images.each do |roast_image| %>
      <tr>
        <td><%= link_to 'Show', roast_image %></td>
        <td><%= link_to 'Edit', edit_roast_image_path(roast_image) %></td>
        <td><%= link_to 'Destroy', roast_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

